{
  "name": "pkce-proxy",
  "version": "0.1.0",
  "description": "A barebones PKCE proxy to enable OAuth for OAuth providers that do not support PKC",
  "main": "dist/index.js",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "start": "node .",
    "build": "tsc && cp -R public dist/",
    "test": "ava"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "@ava/typescript": "^4.1.0",
    "@types/node": "^20.12.2",
    "ava": "^6.1.1",
    "pino-pretty": "^10.3.1",
    "protobufjs-cli": "~1.1.2",
    "tsimp": "^2.0.11",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@deliberative/crypto": "^1.0.8",
    "@fastify/formbody": "^7.4.0",
    "@fastify/static": "^6.12.0",
    "fastify": "^4.22.2",
    "fastify-metrics": "^11.0.0",
    "ioredis": "^5.3.2",
    "protobufjs": "~7.2.5"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--trace-deprecation",
      "--import=tsimp"
    ],
    "verbose": true,
    "environmentVariables": {
      "PROXY_HOSTNAME": "test.com",
      "SECRET_KEY": "abc123"
    }
  }
}
