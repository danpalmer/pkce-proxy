{
  "name": "pkce-proxy",
  "version": "0.1.0",
  "description": "A barebones PKCE proxy to enable OAuth for OAuth providers that do not support PKC",
  "scripts": {
    "start": "bun run index.ts",
    "build": "bun build ./index.ts --outfile=build/bundle.js",
    "test": "PROXY_HOSTNAME=1 SECRET_KEY=abc123 bun test",
    "benchmark-url-size": "PROXY_HOSTNAME=1 SECRET_KEY=abc123 bun scripts/benchmark-url-size.js"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "@ava/typescript": "^4.1.0",
    "@types/supertest": "^6.0.2",
    "ava": "^6.1.1",
    "bun-types": "^1.1.2",
    "pino-pretty": "^10.3.1",
    "protobufjs-cli": "~1.1.2",
    "supertest": "^6.3.4",
    "tsimp": "^2.0.11",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@deliberative/crypto": "^1.0.8",
    "@fastify/formbody": "^7.4.0",
    "@fastify/static": "^6.12.0",
    "fastify": "^4.22.2",
    "fastify-metrics": "^11.0.0",
    "ioredis": "^5.3.2",
    "protobufjs": "~7.2.5"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--trace-deprecation",
      "--import=tsimp"
    ],
    "verbose": true,
    "environmentVariables": {
      "PROXY_HOSTNAME": "test.com",
      "SECRET_KEY": "abc123",
      "SESSION_MAX_SECONDS": "1"
    }
  }
}
